<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.myapplication.view.NoScroolViewPager
        android:id="@+id/viewpager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#EDEDED"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:text="首页"
            android:drawableTop="@drawable/rb_home_drawable_selecor"
            android:gravity="center"
            style="@style/bottem_tag_style" />
        <RadioButton
            android:id="@+id/rb_video"
            android:text="视频"
            android:drawableTop="@drawable/rb_video_drawable_selecor"
            android:gravity="center"
            style="@style/bottem_tag_style" />
        <RadioButton
            android:id="@+id/rb_bm"
            android:text="便民"
            android:drawableTop="@drawable/rb_video_drawable_selecor"
            android:gravity="center"
            style="@style/bottem_tag_style" />
        <RadioButton
            android:id="@+id/rb_me"
            android:text="我"
            android:drawableTop="@drawable/rb_me_drawable_selecor"
            android:gravity="center"
            style="@style/bottem_tag_style" />

    </RadioGroup>

</LinearLayout>